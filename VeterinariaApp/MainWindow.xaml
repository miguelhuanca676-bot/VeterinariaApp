<Window x:Class="VeterinariaApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VeterinariaApp - Menú" Height="500" Width="700"
        WindowStartupLocation="CenterScreen"
        MinHeight="450" MinWidth="600"
        Background="#f5f5f5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="#4CAF50" CornerRadius="0,0,10,10">
            <TextBlock Text="VeterinariaApp" Foreground="White" FontSize="28" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>

        <UniformGrid Grid.Row="1" Rows="4" Columns="1" Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">

            <!-- Botón Registrar Cliente -->
            <Button Name="btnRegistrarCliente" Height="60" FontSize="18" FontWeight="Bold" Background="#2196F3" Foreground="White" Click="BtnRegistrarCliente_Click" Margin="5">
                🐾 Registrar Cliente
            </Button>

            <!-- Botón Historial Clínico -->
            <Button Name="btnHistorialClinico" Height="60" FontSize="18" FontWeight="Bold" Background="#FF9800" Foreground="White" Click="BtnHistorialClinico_Click" Margin="5">
                📋 Historial Clínico
            </Button>

            <!-- Botón Registrar Doctor -->
            <Button Name="btnRegistrarDoctor" Height="60" FontSize="18" FontWeight="Bold" Background="#9C27B0" Foreground="White" Click="BtnRegistrarDoctor_Click" Margin="5">
                🩺 Registrar Doctor
            </Button>

            <!-- Botón Servicios -->
            <Button Name="btnServicios" Height="60" FontSize="18" FontWeight="Bold" Background="#009688" Foreground="White" Click="BtnServicios_Click" Margin="5">
                🐶 Servicios
            </Button>

        </UniformGrid>
    </Grid>
</Window>
