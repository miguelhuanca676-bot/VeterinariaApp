<Window x:Class="VeterinariaApp.RegistrarDoctorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registrar Doctor" Height="350" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Registrar Doctor" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <Label>Nombre</Label>
            <TextBox Name="txtNombre"/>
            <Label>Apellido</Label>
            <TextBox Name="txtApellido"/>
            <Label>Edad</Label>
            <TextBox Name="txtEdad"/>
            <Label>Especialidad</Label>
            <TextBox Name="txtEspecialidad"/>
            <Label>Años de Experiencia</Label>
            <TextBox Name="txtExperiencia"/>
            <Button Content="Guardar Doctor" Margin="0,10,0,0" Height="30" Click="BtnGuardarDoctor_Click"/>
        </StackPanel>
    </Grid>
</Window>
