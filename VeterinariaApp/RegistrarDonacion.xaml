<Window x:Class="VeterinariaApp.RegistrarDonacionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registrar Donación" Height="400" Width="400"
        Background="#FFFDE7" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Registrar Donación" FontSize="24" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Label Content="Nombre del Donante"/>
            <TextBox Name="txtNombreDonante"/>

            <Label Content="Monto / Artículo Donado"/>
            <TextBox Name="txtMontoArticulo"/>

            <Label Content="Fecha"/>
            <DatePicker Name="dpFecha"/>

            <Label Content="Observaciones"/>
            <TextBox Name="txtObservaciones" Height="80" AcceptsReturn="True" TextWrapping="Wrap"/>

            <Button Content="Guardar Donación" Height="40" Background="#FF9800" Foreground="White"
                    FontWeight="Bold" Margin="0,20,0,0" Click="BtnGuardarDonacion_Click"/>
        </StackPanel>
    </Grid>
</Window>
