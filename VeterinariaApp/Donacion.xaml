<Window x:Class="VeterinariaApp.DonacionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Donación" Height="300" Width="400"
        Background="#FFF3E0" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Donaciones" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            <Button Content="Registrar Donación" Height="40" Width="200" Background="#FF9800" Foreground="White" FontWeight="Bold" Click="BtnRegistrarDonacion_Click" Margin="0,0,0,10"/>
            <Button Content="Ver Donaciones" Height="40" Width="200" Background="#F57C00" Foreground="White" FontWeight="Bold" Click="BtnVerDonaciones_Click"/>
        </StackPanel>
    </Grid>
</Window>
