<Window x:Class="VeterinariaApp.DetalleMascotaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalles de Mascota" Height="450" Width="400"
        WindowStartupLocation="CenterScreen" Background="#FAFAFA">

    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center">

            <Image Name="imgMascota" Height="200" Width="200"
                   Stretch="UniformToFill" Margin="0,0,0,15"/>

            <TextBlock Name="txtNombre" FontSize="20" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <TextBlock Name="txtRaza" FontSize="16" Margin="0,0,0,5"/>
            <TextBlock Name="txtEdad" FontSize="16" Margin="0,0,0,5"/>
            <TextBlock Name="txtSexo" FontSize="16" Margin="0,0,0,5"/>
            <TextBlock Name="txtObservaciones" FontSize="16"
                       TextWrapping="Wrap" Margin="0,0,0,15"/>

            <Button Content="ADOPTAR" Width="200" Height="40"
                    Background="#4CAF50" Foreground="White"
                    FontWeight="Bold" Click="BtnAdoptar_Click"/>
        </StackPanel>
    </Grid>
</Window>
