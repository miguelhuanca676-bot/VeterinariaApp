<Window x:Class="VeterinariaApp.AgregarMascotaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agregar Mascota" Height="400" Width="350"
        Background="#FFFDE7" WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Agregar Mascota" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Label Content="Nombre"/>
            <TextBox Name="txtNombre"/>

            <Label Content="Raza"/>
            <TextBox Name="txtRaza"/>

            <Label Content="Edad"/>
            <TextBox Name="txtEdad"/>

            <Label Content="Sexo"/>
            <StackPanel Orientation="Horizontal">
                <RadioButton Name="rbMacho" Content="Macho" GroupName="SexoMascota" Margin="0,0,20,0"/>
                <RadioButton Name="rbHembra" Content="Hembra" GroupName="SexoMascota"/>
            </StackPanel>

            <Label Content="Observaciones"/>
            <TextBox Name="txtObservaciones" Height="60" AcceptsReturn="True" TextWrapping="Wrap"/>

            <Label Content="Imagen"/>
            <StackPanel Orientation="Horizontal">
                <TextBox Name="txtImagenPath" Width="200"/>
                <Button Content="Examinar" Width="80" Click="BtnExaminar_Click"/>
            </StackPanel>

            <Button Content="Agregar Mascota" Height="40" Background="#4CAF50" Foreground="White" FontWeight="Bold" Margin="0,20,0,0" Click="BtnAgregarMascota_Click"/>
        </StackPanel>
    </Grid>
</Window>
