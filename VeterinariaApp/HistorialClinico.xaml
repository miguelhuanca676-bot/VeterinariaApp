<Window x:Class="VeterinariaApp.HistorialClinicoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Historial Clínico" Height="500" Width="600"
        WindowStartupLocation="CenterScreen" Background="#f0f2f5">

    <StackPanel Margin="20">
        <TextBlock Text="Historial Clínico" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <StackPanel Orientation="Horizontal">
            <Label Content="Ingrese CI:" VerticalAlignment="Center"/>
            <TextBox Name="txtBuscarCI" Width="200"/>
            <Button Content="Buscar" Background="#FF9800" Foreground="White" Click="BtnBuscar_Click"/>
        </StackPanel>

        <DataGrid Name="dgHistorial" AutoGenerateColumns="False" Height="350" Margin="0,10,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nombre Mascota" Binding="{Binding Nombre}" Width="*"/>
                <DataGridTextColumn Header="Raza" Binding="{Binding Raza}" Width="*"/>
                <DataGridTextColumn Header="Sexo" Binding="{Binding Sexo}" Width="*"/>
                <DataGridTextColumn Header="Diagnóstico" Binding="{Binding Diagnostico}" Width="*"/>
                <DataGridTextColumn Header="Fecha Registro" Binding="{Binding FechaRegistro}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</Window>
