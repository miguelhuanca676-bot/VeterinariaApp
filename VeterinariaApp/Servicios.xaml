<Window x:Class="VeterinariaApp.ServiciosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Servicios" Height="300" Width="300"
        Background="#f0f2f5" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Button Name="btnDonacion" Content="Donación" Height="40" Width="200" 
                    Click="BtnDonacion_Click"
                    Background="#4CAF50" Foreground="White" FontWeight="Bold" Margin="0,0,0,10"/>
            <Button Name="btnAdopcion" Content="Adopción" Height="40" Width="200" 
                    Click="BtnAdopcion_Click"
                    Background="#2196F3" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
